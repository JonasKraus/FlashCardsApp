    <ImageView
        android:id="@+id/checkBox"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="6dp"
        android:gravity="right"
        android:layout_marginLeft="5dp"
        android:tag="false"/>
        -->
</LinearLayout>


</LinearLayout>

