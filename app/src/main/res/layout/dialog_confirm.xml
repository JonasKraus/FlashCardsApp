<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/dialog_confirm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:drawableStart="@drawable/ic_info_outline"
        android:drawableLeft="@drawable/ic_info_outline"
        android:drawableTint="@color/white"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:text="@string/dialog_header_confirm"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:padding="@dimen/activity_horizontal_margin"
        android:id="@+id/textview_dialog_header"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_dialog_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/dialog_content_unsaved" />

</LinearLayout>